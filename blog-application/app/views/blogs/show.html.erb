<h2>Blog Details</h2>
<%= form_for :blog, :url => edit_blog_path, :method => 'GET'  do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title,:readonly => true%>
  </p>
 
  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text,:readonly => true %>
  </p>
  
  <p>
    <%= f.label :publish %>
    <%= f.radio_button :publish, 'publish', :checked => true %>
  </p>

  <p>
    <%= f.submit :Edit %>
  </p>
<% end %>